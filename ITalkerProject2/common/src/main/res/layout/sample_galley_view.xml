<italker.tencent.com.common.weiget.recycler.QuareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_alpha_208"
        android:visibility="gone"
        android:id="@+id/select_view" />

    <ImageView
        android:id="@+id/select_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <CheckBox
        android:id="@+id/select_check_view"
        android:layout_gravity="end"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:enabled="false"
        android:clickable="false"
        android:drawablePadding="0dp"
        android:layout_margin="@dimen/len_2"
        android:visibility="gone"
        android:buttonTint="@color/white_alpha_128"
        android:button="@drawable/sel_cb_circle"/>

</italker.tencent.com.common.weiget.recycler.QuareLayout>
