<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context="italker.tencent.com.italkerproject.fragments.assist.PermissionFragment">

<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="35dp">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/white"
        app:title="@string/title_assist_permissions"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
        app:titleTextColor="@color/textPrimary" />

</android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/len_92"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/len_16">
            <FrameLayout
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_permission_write"
                    android:textColor="@color/textPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="@dimen/font_16"/>
                <TextView
                    android:layout_marginTop="@dimen/len_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_permission_write_desc"
                    android:textColor="@color/textSecond"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/font_14"/>
                <ImageView
                    android:id="@+id/state_select_permission"
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:layout_gravity="right|center_vertical"
                    android:background="@null"
                    android:src="@drawable/ic_done"
                    android:tint="@color/colorAccent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_permission_network"
                    android:textColor="@color/textPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="@dimen/font_16"/>
                <TextView
                    android:layout_marginTop="@dimen/len_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_permission_network_desc"
                    android:textColor="@color/textSecond"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/font_14"/>
                <ImageView
                    android:id="@+id/network_select_permisson"
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:layout_gravity="right|center_vertical"
                    android:background="@null"
                    android:src="@drawable/ic_done"
                    android:tint="@color/colorAccent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_permission_record_audio"
                    android:textColor="@color/textPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="@dimen/font_16"/>
                <TextView
                    android:layout_marginTop="@dimen/len_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_permission_record_audio_desc"
                    android:textColor="@color/textSecond"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/font_14"/>
                <ImageView
                    android:id="@+id/record_select_permission"
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:layout_gravity="right|center_vertical"
                    android:background="@null"
                    android:src="@drawable/ic_done"
                    android:tint="@color/colorAccent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_permission_read"
                    android:textColor="@color/textPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="@dimen/font_16"/>
                <TextView
                    android:layout_marginTop="@dimen/len_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_permission_read_desc"
                    android:textColor="@color/textSecond"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/font_14"/>
                <ImageView
                    android:id="@+id/oss_select_permission"
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:layout_gravity="right|center_vertical"
                    android:background="@null"
                    android:src="@drawable/ic_done"
                    android:tint="@color/colorAccent"/>
            </FrameLayout>

            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/btn_submit"
                android:layout_width="@dimen/len_172"
                android:layout_height="@dimen/len_44"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/len_48"
                android:layout_marginTop="@dimen/len_48"
                android:background="@drawable/sel_btn_bg_accent_44"
                android:text="@string/label_permission_submit"
                android:textColor="@color/white"
                app:gTouchColor="@color/white_alpha_48"
                app:gTouchCornerRadius="22dp"
                app:gTouchEffect="ripple" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
